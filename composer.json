{
    "name": "picklewagon/api-response",
    "type": "library",
    "description": "Provide helpers to format api responses.",
    "keywords": [
        "laravel",
        "Picklewagon",
        "api",
        "response"
    ],
    "homepage": "https://github.com/picklewagon/api-response",
    "license": "MIT",
    "authors": [
        {
            "name": "Josh Harrison",
            "email": "josh@picklewagon.com"
        }
    ],
    "require": {
        "laravel/framework": "^5.8.0",
        "php" : "~7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "picklewagon/picklewagon-coding-standards": "0.1.*"
    },
    "autoload": {
        "psr-4": {
            "Picklewagon\\ApiResponse\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Picklewagon\\ApiResponse\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
